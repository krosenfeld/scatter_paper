  keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - Instrumentation and Methods for Astrophysics},
  pages = {180},
  annote = {Comment: 17 Pages, 8 Figures, accepted for publication in ApJ},
  file = {arXiv.org Snapshot:/Users/katherine/Library/Application Support/Firefox/Profiles/f3oj2nbg.default/zotero/storage/3UFW8I2R/1502.html:;arXiv\:1502.05722 PDF:/Users/katherine/Library/Application Support/Firefox/Profiles/f3oj2nbg.default/zotero/storage/F39QDBS5/Johnson and Gwinn - 2015 - Theory and Simulations of Refractive Substructure .pdf:application/pdf},
